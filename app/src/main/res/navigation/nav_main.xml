<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/everyoneParkListFragment">

    <fragment
        android:id="@+id/everyoneParkListFragment"
        android:name="com.hyunwoo.cliendroid.presentation.fragment.everyonepark.list.EveryoneParkListFragment"
        android:label="@string/everyone_park_list_label"
        tools:layout="@layout/fragment_everyone_park_list">

        <action
            android:id="@+id/action_everyoneParkListFragment_to_everyoneParkDetailFragment"
            app:destination="@id/everyoneParkDetailFragment"/>

        <action
            android:id="@+id/action_everyoneParkListFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"/>

        <action
            android:id="@+id/action_everyoneParkListFragment_to_searchFragment"
            app:destination="@id/searchFragment"/>
    </fragment>

    <fragment
        android:id="@+id/everyoneParkDetailFragment"
        android:name="com.hyunwoo.cliendroid.presentation.fragment.everyonepark.detail.EveryoneParkDetailFragment"
        tools:layout="@layout/fragment_everyone_park_detail"/>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.hyunwoo.cliendroid.presentation.fragment.search.SearchFragment"
        android:label="@string/search_label"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/action_searchFragment_to_everyoneParkDetailFragment"
            app:destination="@id/everyoneParkDetailFragment"/>
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.hyunwoo.cliendroid.presentation.fragment.settings.SettingsFragment"
        android:label="@string/settings_label"
        tools:layout="se"/>

</navigation>
